    $apiKey = 'invalid-key';
    $edit = array(
      'akismet_api_key' => $apiKey,
    );
    $this->backdropGet('admin/config/content/akismet/settings');
    $this->assertText('The Akismet API key is not configured yet.');
    $this->backdropPost(NULL, $edit, t('Save configuration'), array('watchdog' => WATCHDOG_EMERGENCY));
    $this->assertNoText('The Akismet API key is not configured yet.');
    $this->assertText(t('The configuration options have been saved.'));
    $this->assertText('The API key could not be verified.');

